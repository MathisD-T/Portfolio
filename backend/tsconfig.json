{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "types": ["node"]
  },
  "include": ["./**/*.ts"]
}
